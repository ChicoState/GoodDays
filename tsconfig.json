{
    "compilerOptions": {
        "module": "ES2022",
        "allowJs": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": [
        "./src/**/*.tsx",
        "./src/**/*.ts",
        "./src/**/*.jsx",
        "./src/**/*.js",
        "./src"   
    ]
}
